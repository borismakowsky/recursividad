#include "stdafx.h"
#include "conio.h"
#include <iostream>
#define MAX 50

using namespace std;
void cargarVector (int v[], int n);
void mostrarVector (int v[], int n);
void invertirSubvector (int v[], int i, int j);

void main()
{
	int v[MAX],n,i,j;
	cout<<"Dimension del vector: ";
	cin>>n;
	cargarVector (v,n);
	cout<<endl;
	mostrarVector (v,n);
	cout<<endl;
	cout<<"Ingrese desde que posicion empieza el subvector: ";
	cin>>i;
	cout<<"Ingrese en que posicion termina el subvector: ";
	cin>>j;
	invertirSubvector (v,i,j);
	cout<<endl;
	mostrarVector (v,n);
	getch();

}

void cargarVector (int v[], int n)
{
	int i=0;
	while (i<n)
	{
		cout<<"V["<<i<<"]= ";
		cin>>v[i];
		i++;
	}
}

void mostrarVector (int v[], int n)
{
	int i=0;
	while (i<n)
	{
		cout<<v[i]<<"\t";
		i++;
	}
}

void invertirSubvector (int v[], int i, int j)
{
	int n=j-i+1;
	if (n==1)
	{
		
	}
	else
	{
		if (n==2)
		{
			int aux=v[i];
			v[i]=v[j];
			v[j]=aux;
		}
			

		else
		{
			invertirSubvector(v,i+1,j-1);
			int aux=v[i];
			v[i]=v[j];
			v[j]=aux;
			
		}
	}
}
