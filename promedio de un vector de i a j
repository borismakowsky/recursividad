
#include "stdafx.h"
#include "conio.h"
#include <iostream>
#define MAX 50

using namespace std;
void cargarVector (float v[], float n);
void mostrarVector (float v[], float n);
float promedio (float v[], float n, float i, float j);

void main()
{
	int v[MAX];
	float n,i,j,prom;
	cout<<"Dimension del vector: ";
	cin>>n;
	cargarVector (v,n);
	cout<<endl;
	mostrarVector (v,n);
	cout<<endl;
	cout<<"Ingrese la posicion donde va a empezar a sacar el promedio";
	cin>>i;
	cout<<"Ingrese la posicion donde va a terminar de sacar el promedio";
	cin>>j;
	i=i-1;
	j=j-1;
	j=(n-j-1);
	prom=promedio (v,n,i,j);
	cout<<endl<<"el promedio es: "<<prom;

	getch();
}

void cargarVector (float v[], float n)
{
	int i=0;
	while (i<n)
	{
		cout<<"V["<<i<<"]= ";
		cin>>v[i];
		i++;
	}
}

void mostrarVector (float v[], float n)
{
	int i=0;
	while (i<n)
	{
		cout<<v[i]<<"\t";
		i++;
	}
}

float promedio (float v[], float n, float i, float j)
{
	if (n==1)
		return v[0];
	else
	{
		float p=promedio(v,n,i,j);
		return (p*(n-i-j-1)+v[n-j])/(n-i-j);
	}
}
