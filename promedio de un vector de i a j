#include "stdafx.h"
#include "conio.h"
#include <iostream>
#define MAX 50

using namespace std;
void cargarVector (int v[], int n);
void mostrarVector (int v[], int n);
float promedio (int v[],int i, int k);

void main()
{
	int v[MAX],i,k,n;
	float prom;
	cout<<"Dimension del vector: ";
	cin>>n;
	cargarVector (v,n);
	cout<<endl;
	mostrarVector (v,n);
	cout<<endl;
	cout<<"Ingrese desde que posicion empieza el subvector: ";
	cin>>i;
	cout<<"Ingrese en que posicion termina el subvector: ";
	cin>>k;
	prom=promedio(v,i,k);
	cout<<"El promedio es: "<<prom;
	getch();
}

void cargarVector (int v[], int n)
{
	int i=0;
	while (i<n)
	{
		cout<<"V["<<i<<"]= ";
		cin>>v[i];
		i++;
	}
}

void mostrarVector (int v[], int n)
{
	int i=0;
	while (i<n)
	{
		cout<<v[i]<<"\t";
		i++;
	}
}

float promedio (int v[],int i, int k)
{
	float n=k-i+1;
	if (n==1)
		return v[i];
	else
	{
		float p=promedio(v,i,k-1);
		return (p*(k-1)+v[k])/n;

	}
}
